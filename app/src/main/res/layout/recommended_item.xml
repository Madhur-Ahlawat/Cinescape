<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin3">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_recommended"
        android:layout_width="109dp"
        android:layout_height="155dp"
        android:layout_marginBottom="14dp"
        android:background="@color/transparent"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/margin8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_recommended"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/img_demo"
                tools:ignore="ContentDescription" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/margin8"
                android:layout_marginBottom="@dimen/margin12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/imageView60"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin40"
                    android:visibility="gone"
                    android:layout_alignParentTop="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/en_tab"
                    tools:ignore="ContentDescription" />

                <com.haozhang.lib.SlantedTextView
                    android:id="@+id/tag"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:fontFamily="@font/sf_pro_text_medium"
                    app:slantedMode="left"
                    app:slantedLength="25dp"
                    app:slantedTextSize="@dimen/size10"
                    app:slantedTextColor="@color/white"
                    app:slantedText="abcdefg" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
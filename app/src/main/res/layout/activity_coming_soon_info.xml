<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        tools:context=".ui.main.views.ComingSoonMovieInfoActivity">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="309dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/contentDes"
            android:src="@drawable/video_demo_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_back_btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/contentDes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:srcCompat="@drawable/ic_back_button" />

        <TextView
            android:id="@+id/text_movie_title_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/gibson_semibold"
            tools:text="No Time to Die"
            android:textColor="@color/white"
            android:textSize="@dimen/size20"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4">

            <View
                android:id="@+id/view10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view11"
                android:layout_width="0dp"
                android:layout_height="70dp"
                app:layout_constraintEnd_toEndOf="@+id/view10"
                app:layout_constraintStart_toStartOf="@+id/view10"
                app:layout_constraintTop_toTopOf="@+id/view10" />

            <TextView
                android:id="@+id/text_movie_release_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_regular"
                tools:text="Coming soon - 11 Nov 2020"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/size14"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/icon_bell"
                app:layout_constraintStart_toStartOf="@+id/view11"
                app:layout_constraintTop_toTopOf="@+id/view11" />

            <ImageView
                android:id="@+id/icon_bell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/contentDes"
                android:paddingStart="@dimen/margin20"
                android:paddingEnd="@dimen/margin20"
                android:src="@drawable/ic_icon_awesome_bell"
                app:layout_constraintBottom_toBottomOf="@+id/text_movie_release_date"
                app:layout_constraintEnd_toStartOf="@+id/icon_uplooad"
                app:layout_constraintTop_toTopOf="@+id/text_movie_release_date" />

            <ImageView
                android:id="@+id/icon_uplooad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/contentDes"
                android:paddingStart="@dimen/dimen30"
                android:paddingEnd="@dimen/margin10"
                android:src="@drawable/ic_icon_feather_upload"
                app:layout_constraintBottom_toBottomOf="@+id/icon_bell"
                app:layout_constraintEnd_toEndOf="@+id/view11"
                app:layout_constraintTop_toTopOf="@+id/icon_bell" />

            <TextView
                android:id="@+id/text_notify_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="@string/notify_me"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/size14"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/text_share"
                app:layout_constraintTop_toBottomOf="@+id/icon_bell" />

            <TextView
                android:id="@+id/text_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="@string/share"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/size14"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/text_notify_me"
                app:layout_constraintEnd_toEndOf="@+id/view11"
                app:layout_constraintTop_toTopOf="@+id/text_notify_me" />

            <TextView
                android:id="@+id/text_cast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/gibson_semibold"
                android:text="@string/cast"
                android:textColor="@color/white"
                android:textSize="@dimen/size18"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/view11"
                app:layout_constraintStart_toStartOf="@+id/view11"
                app:layout_constraintTop_toBottomOf="@+id/view11" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_cast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/text_cast"
                app:layout_constraintStart_toStartOf="@+id/text_cast"
                app:layout_constraintTop_toBottomOf="@+id/text_cast" />

            <View
                android:id="@+id/view12"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toStartOf="@+id/view13"
                app:layout_constraintHorizontal_weight="3"
                app:layout_constraintStart_toStartOf="@+id/recyclerview_cast"
                app:layout_constraintTop_toBottomOf="@+id/recyclerview_cast" />

            <View
                android:id="@+id/view13"
                android:layout_width="0dp"
                android:layout_height="70dp"
                app:layout_constraintBottom_toBottomOf="@+id/view12"
                app:layout_constraintEnd_toEndOf="@+id/recyclerview_cast"
                app:layout_constraintHorizontal_weight="4.3"
                app:layout_constraintStart_toEndOf="@+id/view12"
                app:layout_constraintTop_toTopOf="@+id/view12"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/text_director"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gibson_semibold"
                android:text="@string/director"
                android:textColor="@color/white"
                android:textSize="@dimen/size18"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/view12"
                app:layout_constraintStart_toStartOf="@+id/view12"
                app:layout_constraintTop_toTopOf="@+id/view12" />

            <TextView
                android:id="@+id/text_directoe_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="@string/joy_rayce"
                android:textColor="@color/text_color"
                android:textSize="@dimen/size16"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/view12"
                app:layout_constraintStart_toStartOf="@+id/view12"
                app:layout_constraintTop_toBottomOf="@+id/text_director" />

            <TextView
                android:id="@+id/text_genre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gibson_semibold"
                android:text="@string/genre"
                android:textColor="@color/white"
                android:textSize="@dimen/size18"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/view13"
                app:layout_constraintStart_toStartOf="@+id/view13"
                app:layout_constraintTop_toTopOf="@+id/view13" />

            <TextView
                android:id="@+id/text_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sf_pro_text_regular"
                tools:text="Action, Adventure, Crime"
                android:textColor="@color/text_color"
                android:textSize="@dimen/size16"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/view13"
                app:layout_constraintStart_toStartOf="@+id/view13"
                app:layout_constraintTop_toBottomOf="@+id/text_genre" />

            <View
                android:id="@+id/view14"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@+id/view13"
                app:layout_constraintStart_toStartOf="@+id/view12"
                app:layout_constraintTop_toBottomOf="@+id/view12" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gibson_semibold"
                android:text="@string/languange"
                android:textColor="@color/white"
                android:textSize="@dimen/size18"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/view14"
                app:layout_constraintStart_toStartOf="@+id/view14"
                app:layout_constraintTop_toTopOf="@+id/view14" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sf_pro_text_regular"
                tools:text="English"
                android:textColor="@color/text_color"
                android:textSize="@dimen/size16"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/view14"
                app:layout_constraintStart_toStartOf="@+id/view14"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/text_synopsis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/sf_pro_text_heavy"
                android:letterSpacing="-0.01"
                android:text="@string/synopsis"
                android:textColor="@color/white"
                android:textSize="@dimen/size16"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/textView10"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/view14" />

            <TextView
                android:id="@+id/text_sysnopsis_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:lineSpacingExtra="1.3sp"
                tools:text="James Bond has left active service. His peace is short-lived when Felix Leiter, an old friend from the CIA, turns up asking for help, leading Bond onto the trail of a mysterious villain armed with dangerous new technology. "
                android:textColor="@color/text_color"
                android:textSize="@dimen/size14"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/text_synopsis"
                app:layout_constraintStart_toStartOf="@+id/text_synopsis"
                app:layout_constraintTop_toBottomOf="@+id/text_synopsis" />

            <TextView
                android:id="@+id/text_similar_movies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/sf_pro_text_heavy"
                android:text="@string/similar_movies_now_showing"
                android:textColor="@color/white"
                android:textSize="@dimen/size16"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/text_sysnopsis_detail"
                app:layout_constraintStart_toStartOf="@+id/text_sysnopsis_detail"
                app:layout_constraintTop_toBottomOf="@+id/text_sysnopsis_detail" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_similar_movies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/text_similar_movies"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/text_similar_movies"
                app:layout_constraintTop_toBottomOf="@+id/text_similar_movies" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin15"
    android:layout_marginEnd="@dimen/margin20"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/tv_seat_selectiopn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="6sp"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:text="@string/standard"
        android:textAllCaps="true"
        android:textColor="@color/hint_color"
        android:textSize="@dimen/size14"
        app:layout_constraintEnd_toEndOf="@+id/image_seat_selection"
        app:layout_constraintStart_toStartOf="@+id/image_seat_selection"
        app:layout_constraintTop_toBottomOf="@+id/image_seat_selection"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/image_seat_selection"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="@dimen/margin5"
        android:adjustViewBounds="true"
        android:contentDescription="@string/contentDes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_img_bachelor"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/tv_seat_avialable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="0.5sp"
        tools:text="125 Available"
        android:fontFamily="@font/sf_pro_text_regular"
        android:visibility="invisible"
        android:layout_marginTop="-5dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/size13"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/tv_seat_selectiopn"
        app:layout_constraintStart_toStartOf="@+id/tv_seat_selectiopn"
        app:layout_constraintTop_toBottomOf="@+id/tv_seat_selectiopn" />

    <TextView
        android:id="@+id/tv_kd_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="0.5sp"
        tools:text="KD 2.500"
        android:layout_marginTop="-8dp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:visibility="invisible"
        android:textColor="@color/hint_color"
        android:textSize="@dimen/size13"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/tv_seat_avialable"
        app:layout_constraintStart_toStartOf="@+id/tv_seat_avialable"
        app:layout_constraintTop_toBottomOf="@+id/tv_seat_avialable" />

</androidx.constraintlayout.widget.ConstraintLayout>
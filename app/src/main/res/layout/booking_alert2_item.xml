<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:backgroundTint="@color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_booking_alert2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin2"
        app:cardCornerRadius="@dimen/margin12"
        app:cardElevation="@dimen/margin2"
        app:cardBackgroundColor="@color/head_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/margin8"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="@dimen/margin2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_film"
                    android:layout_width="match_parent"
                    android:layout_height="229dp"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/contentDes"
                    app:srcCompat="@drawable/bombshell" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_cinemas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:fontFamily="@font/sf_pro_text_bold"
                android:letterSpacing="-0.01"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/size14"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:layout_constraintStart_toStartOf="@+id/card"
                app:layout_constraintTop_toBottomOf="@+id/card"
                tools:text="Cinescape Al-Muhallab" />

            <View
                android:id="@+id/view39"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:layout_constraintStart_toStartOf="@+id/card"
                app:layout_constraintTop_toBottomOf="@+id/tv_cinemas" />

            <TextView
                android:id="@+id/textView_dates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/sf_pro_text_bold"
                android:letterSpacing="-0.01"
                tools:text="04 jul 2021"
                android:textColor="@color/black"
                android:textSize="@dimen/size12"
                app:layout_constraintBottom_toBottomOf="@+id/view39"
                app:layout_constraintEnd_toStartOf="@+id/textView_time1"
                app:layout_constraintStart_toStartOf="@+id/view39"
                app:layout_constraintTop_toTopOf="@+id/view39" />

            <TextView
                android:id="@+id/textView_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sf_pro_text_bold"
                android:letterSpacing="-0.01"
                tools:text="11:45"
                android:textColor="@color/black"
                android:textSize="@dimen/size12"
                app:layout_constraintBottom_toBottomOf="@+id/textView_dates"
                app:layout_constraintEnd_toEndOf="@+id/view39"
                app:layout_constraintStart_toEndOf="@+id/textView_dates"
                app:layout_constraintTop_toTopOf="@+id/textView_dates" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
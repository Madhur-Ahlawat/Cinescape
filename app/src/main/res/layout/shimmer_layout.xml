<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shimmer_clip_to_children="true"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="1"
        app:shimmer_colored="false"
        app:shimmer_direction="left_to_right"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view54"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@color/shimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/view53"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/shimmer"
                app:layout_constraintTop_toBottomOf="@+id/view54" />

            <include
                android:id="@+id/view55"
                layout="@layout/shimmer_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view53" />

            <include
                android:id="@+id/view56"
                layout="@layout/shimmer_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/view55"
                app:layout_constraintTop_toTopOf="@+id/view55" />


            <include
                android:id="@+id/view57"
                layout="@layout/shimmer_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/view56"
                app:layout_constraintTop_toTopOf="@+id/view56" />


            <View
                android:id="@+id/view58"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@color/shimmer"
                app:layout_constraintTop_toBottomOf="@+id/view57" />


            <include
                android:id="@+id/view59"
                layout="@layout/shimmer_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view58" />


            <include
                android:id="@+id/view60"
                layout="@layout/shimmer_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/view59"
                app:layout_constraintTop_toTopOf="@+id/view59" />

            <include
                android:id="@+id/view61"
                layout="@layout/shimmer_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/view60"
                app:layout_constraintTop_toTopOf="@+id/view60" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
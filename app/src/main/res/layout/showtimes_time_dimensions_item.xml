<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin15"
        android:layout_marginBottom="@dimen/margin10"
        android:elevation="@dimen/margin2"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="@dimen/margin8"
        app:cardElevation="@dimen/margin2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="65dp"
            android:background="@drawable/filter_item"
            android:paddingStart="3dp"
            android:paddingEnd="3dp">

            <TextView
                android:id="@+id/text_movies_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin4"
                android:layout_marginEnd="@dimen/margin4"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="center_horizontal"
                android:textColor="@color/text_alert_color_red"
                android:textSize="@dimen/size10"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_dimension"
                tools:text="STANDARDS" />

            <TextView
                android:id="@+id/text_dimension"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size18"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/size10"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_times"
                tools:text="3D" />

            <TextView
                android:id="@+id/text_times"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size22"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/size12"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="11:30" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
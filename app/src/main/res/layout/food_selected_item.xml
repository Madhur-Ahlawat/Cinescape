<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_now_showing"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin6"
    android:background="@drawable/food_item_bg"
    android:elevation="@dimen/margin2"
    app:cardBackgroundColor="#AD696969"
    app:cardElevation="@dimen/margin2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/margin12"
        android:paddingEnd="@dimen/margin12"
        android:paddingTop="@dimen/margin6"
        android:paddingBottom="@dimen/margin6">

        <ImageView
            android:id="@+id/image_food_select"
            android:layout_width="51dp"
            android:layout_height="43dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/contentDes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/app_icon" />

        <TextView
            android:id="@+id/text_food_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/size12"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_food_select"
            tools:text="Popcorn" />

        <View
            android:id="@+id/vie146"
            app:layout_constraintEnd_toEndOf="@+id/text_food_item_name"
            app:layout_constraintStart_toStartOf="@+id/text_food_item_name"
            app:layout_constraintTop_toBottomOf="@+id/text_food_item_name"
            android:layout_width="0dp"
            android:layout_height="5dp"/>

        <ImageView
            android:id="@+id/image_arrow_down"
            android:layout_width="@dimen/size16"
            android:layout_height="@dimen/size16"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/contentDes"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/text_food_item_name"
            app:layout_constraintStart_toStartOf="@+id/text_food_item_name"
            app:layout_constraintTop_toBottomOf="@+id/vie146"
            app:srcCompat="@drawable/ic_icons_arrow_down"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>